#: import utils kivy.utils
<TheGrid>
    
    input:input
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        TextInput:
            id: input
            multiline: False
            readonly: True
            font_size: 60
            halign: "right"
            size_hint: (1,.3)
            background_normal: ''
            background_color: utils.get_color_from_hex('#bffdff')
            
        
        GridLayout:
            cols: 5

            Button:
                text: "quad"
                font_size: 32
                on_press: root.act("**2")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

            Button:
                text: "sqrt"
                font_size: 32
                on_press: root.act("**0.5")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

            Button:
                text: "pow"
                font_size: 32
                on_press: root.act("**")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

            Button:
                text: "ln"
                font_size: 32
                on_press: root.act("ln(")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

            Button:
                text: "pi"
                font_size: 32
                on_press: root.act("pi")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

           # ROW

            Button:
                text: "sin"
                font_size: 32
                on_press: root.act("sin(")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

            Button:
                text: "cos"
                font_size: 32
                on_press: root.act("cos(")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

            Button:
                text: "tan"
                font_size: 32
                on_press: root.act("tan(")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

            Button:
                text: "("
                font_size: 32
                on_press: root.act("(")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

            Button:
                text: ")"
                font_size: 32
                on_press: root.act(")")
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')

           # ROW
            
            Button:
                text: "7"
                font_size: 32
                on_press: root.act(7)
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')
                
            Button:
                text: "8"
                font_size: 32
                on_press: root.act(8)
                background_normal: ''
