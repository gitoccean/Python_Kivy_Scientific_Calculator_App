                font_size: 32
                on_press: root.act(9)
                background_normal: ''
                background_color: utils.get_color_from_hex('#166f70')
                
            Button:
                text: "CL"
                font_size: 32
                on_press: root.clear()
                background_normal: ''
                background_color: utils.get_color_from_hex('#00979c')
            
            Button:
                text: "<<"
                font_size: 32
                on_press: root.remove()
                background_normal: ''
